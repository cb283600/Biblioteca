@model Dominio.Entidades.Pais

@{
	ViewData["Title"] = "Edit";
}

<div class="container mt-5">
	<h1 class="text-center">Editar País</h1>

	@if (ViewBag.Error != null)
	{
		<div class="alert alert-danger" role="alert">
			@ViewBag.Error
		</div>
	}

	<div class="card">
		<div class="card-body">
			<h4 class="card-title">País</h4>
			<hr />

			<form asp-action="Edit">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>

				<div class="mb-3">
					<label asp-for="Id" class="form-label">ID</label>
					<input asp-for="Id" class="form-control" readonly />
				</div>

				<div class="mb-3">
					<label asp-for="Nombre" class="form-label">Nombre</label>
					<input asp-for="Nombre" class="form-control" />
				</div>

				<div class="mb-3">
					<label asp-for="CantHabitantes" class="form-label">Cantidad de Habitantes</label>
					<input asp-for="CantHabitantes" class="form-control" />
				</div>

				<div class="d-flex justify-content-between">
					<button type="submit" class="btn btn-primary">Guardar</button>
					<a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
				</div>
			</form>
		</div>
	</div>
</div>
